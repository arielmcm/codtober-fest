{
  "extends": "loopback",
  "env": {
    "jest": true
  },
  "rules": {
    "strict": ["error", "never"],
    "padded-blocks": ["off"],
    "space-before-function-paren": ["error", "always"],
    "quote-props": ["error", "as-needed"],
    "new-cap": [
      "error",
      {
        "properties": false
      }
    ],
    "max-params": ["error", 4],
    "max-len": ["error", 400],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "one-var": ["error", "never"]
  },
  "parser": "babel-eslint"
}
